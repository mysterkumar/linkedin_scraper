# LinkedIn Scraper Configuration
# Copy this file to .env and fill in your details

# LinkedIn Credentials (optional - will prompt if not provided)
LINKEDIN_EMAIL=your-email@example.com
LINKEDIN_PASSWORD=your-password

# Scraping Configuration
MAX_PROFILES=50
HEADLESS_MODE=False
EXPORT_INTERVAL=10

# Profile Discovery Sources
SEED_PROFILES=https://www.linkedin.com/in/satyanadella/,https://www.linkedin.com/in/sundarpichai/
COMPANY_URLS=https://www.linkedin.com/company/microsoft/,https://www.linkedin.com/company/google/
SEARCH_TERMS=Software Engineer,Data Scientist,Product Manager

# Output Configuration
OUTPUT_DIRECTORY=./output
DATABASE_FILE=scraped_profiles.json

# Delays (seconds)
MIN_DELAY=2
MAX_DELAY=5
RETRY_DELAY=10
MAX_RETRIES=3
